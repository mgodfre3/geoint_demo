# --- Azure Subscription & Resource Group ---
AZURE_SUBSCRIPTION_ID=
AZURE_RESOURCE_GROUP=rg-geoint-demo
AZURE_LOCATION=eastus

# --- Azure Local Cluster ---
# These resources often live in the cluster's own resource group (not the demo RG).
# Provide the FULL ARM resource ID for each.

# Custom location (from: az customlocation list -o table)
# Example: /subscriptions/<sub>/resourceGroups/<clusterRG>/providers/Microsoft.ExtendedLocation/customLocations/<name>
AZURE_CUSTOM_LOCATION_ID=

# Logical network (from: az stack-hci-vm network lnet list -o table)
# Example: /subscriptions/<sub>/resourceGroups/<clusterRG>/providers/Microsoft.AzureStackHCI/logicalNetworks/<name>
AZURE_LOGICAL_NETWORK_ID=

# Gallery image (from: az stack-hci-vm image list -o table)
# Example: /subscriptions/<sub>/resourceGroups/<clusterRG>/providers/microsoft.azurestackhci/galleryimages/Ubuntu-2204
AZURE_GALLERY_IMAGE_ID=

# --- Arc-Enabled AKS ---
AKS_CLUSTER_NAME=geoint-aks
AKS_KUBERNETES_VERSION=1.28.5

# --- Container Registry ---
ACR_NAME=acrgeointdemo

# --- VM Configuration ---
VM_GEOSERVER_NAME=vm-geoserver
VM_GEOSERVER_VCPU=8
VM_GEOSERVER_MEMORY_MB=16384
VM_GEOSERVER_OS_DISK_GB=128
VM_GEOSERVER_DATA_DISK_GB=256

VM_GLOBE_NAME=vm-globe
VM_GLOBE_VCPU=4
VM_GLOBE_MEMORY_MB=8192
VM_GLOBE_OS_DISK_GB=128
VM_GLOBE_DATA_DISK_GB=64

VM_ADMIN_USERNAME=azureuser
VM_ADMIN_PASSWORD=

# --- Networking / Demo Access ---
# AKS worker node IP (from: kubectl get nodes -o wide)
AKS_WORKER_IP=
# VM IPs (from: az stack-hci-vm network nic show)
VM_GEOSERVER_IP=
VM_GLOBE_IP=

# --- Flux GitOps ---
FLUX_REPO_URL=https://github.com/<your-org>/geoint_demo
FLUX_BRANCH=main

# --- CesiumJS ---
CESIUM_ION_ACCESS_TOKEN=

# --- Foundry Local Models ---
FOUNDRY_VISION_MODEL=microsoft/Phi-3.5-vision-instruct
FOUNDRY_CHAT_MODEL=microsoft/Phi-4-mini
